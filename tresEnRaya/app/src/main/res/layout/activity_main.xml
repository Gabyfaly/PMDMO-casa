<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/campo"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/Theme.AppCompat">

    <TableLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*"
        android:textSize="20sp">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/one"
                android:contentDescription="@string/one"
                android:onClick="onclick"
                android:text="@string/one"
                android:textSize="50sp" />

            <Button
                android:id="@+id/two"
                android:contentDescription="@string/two"
                android:onClick="onclick"
                android:text="@string/two"
                android:textSize="50sp" />

            <Button
                android:id="@+id/three"
                android:contentDescription="@string/three"
                android:onClick="onclick"
                android:text="@string/three"
                android:textSize="50sp" />
        </TableRow>

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/four"
                android:contentDescription="@string/four"
                android:onClick="onclick"
                android:text="@string/four"
                android:textSize="50sp" />

            <Button
                android:id="@+id/five"
                android:contentDescription="@string/five"
                android:onClick="onclick"
                android:text="@string/five"
                android:textSize="50sp" />

            <Button
                android:id="@+id/six"
                android:contentDescription="@string/six"
                android:onClick="onclick"
                android:text="@string/six"
                android:textSize="50sp" />
        </TableRow>


        <TableRow

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/seven"
                android:contentDescription="@string/seven"
                android:onClick="onclick"
                android:text="@string/seven"
                android:textSize="50sp" />

            <Button
                android:id="@+id/eight"
                android:contentDescription="@string/eight"
                android:onClick="onclick"
                android:text="@string/eight"
                android:textSize="50sp" />

            <Button
                android:id="@+id/nine"
                android:contentDescription="@string/nine"
                android:onClick="onclick"
                android:text="@string/nine"
                android:textSize="50sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="6"
                android:gravity="center"
                android:text="@string/result_human_wins"
                android:textColor="@color/purple_200"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/player_score_label"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/player_score"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tie_score_label"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ties_score"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/computer_score_label"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/computer_score"
                android:text="@string/puntuación_jugador"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>